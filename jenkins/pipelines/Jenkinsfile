// Manage Jenkins master service
pipeline {
    agent any
    triggers {
        pollSCM('H/5 * * * *')
        openshiftImageStream name: 'jenkins', namespace: 'openshift', tag: 'latest'
    }
    stages {
        stage('Checkout') {
            steps {
                // ignore checkout part of excludedRegions
                checkout([$class: 'GitSCM',
                    branches: [[name: "refs/remotes/origin/master"]],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [[
                        $class: 'PathRestriction',
                        excludedRegions: '^ansible/.*\n^app/.*']],
                    submoduleCfg: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/RHsyseng/jenkins-on-openshift']]])
            }
        }
        stage('Trigger build') {
            steps {
                openshiftBuild bldCfg: 'jenkins-custom'
            }
        }
        stage('Verify build') {
            steps {
                openshiftBuild bldCfg: 'jenkins-custom', waitTime: '240', waitUnit: 'sec'
            }
        }
        stage('Verify deployment') {
            steps {
                openshiftVerifyDeployment depCfg: 'jenkins', waitTime: '360', waitUnit: 'sec'
            }
        }
    }
}
